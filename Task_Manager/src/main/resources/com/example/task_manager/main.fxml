<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.task_manager.MainController">
    <children>
        <VBox layoutX="14.0" layoutY="14.0" prefHeight="570.0" prefWidth="772.0" spacing="10.0">
            <children>
                <Label text="Covey Quadrants Task Manager" />
                <Label text="Enter Task:" />
                <TextField fx:id="taskInput" />
                <Label text="Importance (1-5):" />
                <TextField fx:id="importanceInput" />
                <Label text="Urgency (1-5):" />
                <TextField fx:id="urgencyInput" />
                <Button mnemonicParsing="false" onAction="#addTask" text="Add Task" />
                <Label text="Quadrant I: Important and Urgent" />
                <ListView fx:id="quadrant1ListView" prefHeight="100.0" prefWidth="200.0" />
                <Label text="Quadrant II: Important and Not Urgent" />
                <ListView fx:id="quadrant2ListView" prefHeight="100.0" prefWidth="200.0" />
                <Label text="Quadrant III: Not Important and Urgent" />
                <ListView fx:id="quadrant3ListView" prefHeight="100.0" prefWidth="200.0" />
                <Label text="Quadrant IV: Not Important and Not Urgent" />
                <ListView fx:id="quadrant4ListView" prefHeight="100.0" prefWidth="200.0" />
            </children>
        </VBox>
    </children>
</AnchorPane>
